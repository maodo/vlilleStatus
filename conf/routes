# ~~~~
# Routes
# ~~~~

# Index
GET     /                           controllers.StationsController.index

# Stations
GET     /api/stations               controllers.StationsController.list
GET     /api/stations/update        controllers.StationsController.update

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
